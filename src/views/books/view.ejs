<!doctype html>
<html lang="en">
<head>
    <%- include('../partials/head') %>
</head>
<body class="container">

<header>
    <%- include('../partials/header') %>
</header>
<main class="row justify-content-md-center">
    <h1><%= book.title%></h1>
    <div class="card " style="width: 50%">
        <div class="card-body">
            <h5 class="card-title"><%= book.title%></h5>
            <h6 class="card-subtitle mb-2 text-muted"><%= book.author%></h6>
            <p class="card-text"><%= book.desc%></p>
            <a class="btn btn-sm btn-primary mr-3" href="/books/update/<%= book.id %>">
                <i class="fa fa-pencil-square-o" aria-hidden="true">Update</i>
            </a>
            <form action="/books/delete/<%= book.id %>" method="POST" class="d-inline">
                <button class="btn btn-sm btn-danger m-2">
                    <i class="fa fa-trash-o fa-lg">Delete</i>
                </button>
            </form>
        </div>
    </div>
</main>
</body>
</html>